// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  password      String?
  image         String?
  role          String    @default("CLIENT") // PERFORMER, CLIENT, ADMIN
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  profile       Profile?
  bookings      Booking[] @relation("ClientBookings")
  performerBookings Booking[] @relation("PerformerBookings")
  messages      Message[] @relation("SenderMessages")
  receivedMessages Message[] @relation("ReceiverMessages")
  payments      Payment[]
  content       Content[]
  favorites     Favorite[]
}

model Account {
  id                String      @id @default(cuid())
  userId            String
  type              String      // EMAIL, GOOGLE, GITHUB
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Profile {
  id          String   @id @default(cuid())
  userId      String   @unique
  bio         String?
  location    String?
  age         Int?
  height      String?
  measurements String?
  services    String?    // JSON string: ["private shows", "virtual", "photo sets", etc.]
  rates       String?    // JSON string: { "privateShow": 200, "virtual": 100, etc. }
  availability String?   // JSON string: Schedule availability
  verified    Boolean  @default(false)
  featured    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  content     Content[]
  favorites   Favorite[]
}

model Content {
  id          String   @id @default(cuid())
  userId      String
  profileId   String
  type        String   // "photo", "video", "live"
  url         String
  thumbnail   String?
  title       String?
  description String?
  isPremium   Boolean  @default(false)
  price       Float?
  views       Int      @default(0)
  likes       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  profile     Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
}

model Booking {
  id          String   @id @default(cuid())
  performerId String
  clientId    String
  type        String   // "private", "virtual", "in-person"
  date        DateTime
  duration    Int      // minutes
  rate        Float
  status      String   @default("pending") // "pending", "confirmed", "completed", "cancelled"
  notes       String?
  location    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  performer   User     @relation("PerformerBookings", fields: [performerId], references: [id])
  client      User     @relation("ClientBookings", fields: [clientId], references: [id])
  payment     Payment?
}

model Message {
  id        String   @id @default(cuid())
  senderId  String
  receiverId String
  content   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  sender    User     @relation("SenderMessages", fields: [senderId], references: [id])
  receiver  User     @relation("ReceiverMessages", fields: [receiverId], references: [id])
}

model Payment {
  id          String   @id @default(cuid())
  userId      String
  bookingId   String?  @unique
  amount      Float
  currency    String   @default("usd")
  stripeId    String?  @unique
  status      String   // "pending", "completed", "failed", "refunded"
  description String?
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id])
  booking     Booking? @relation(fields: [bookingId], references: [id])
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  profileId String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  profile   Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@unique([userId, profileId])
}

